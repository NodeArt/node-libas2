{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "outDir": "dist",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "types": [
      "node-forge",
      "mocha",
      "node",
      "uuid"
    ]
  },

  "exclude": [
    "node_modules",
    "dist"
  ]
}
